# Default empty server
server {
  listen <%= ENV['PORT'] %> default_server;
  server_name _;
  return 200;
}

server {
  server_name pass.sports.gouv.fr;
  listen <%= ENV['PORT'] %>;
  location / {
    proxy_pass https://wp-pass.sports.gouv.fr;
    proxy_intercept_errors  on;
    proxy_set_header        Host                 wp-pass.sports.gouv.fr;
    proxy_set_header        X-Real-IP            $remote_addr;
    proxy_set_header        X-Forwarded-For      $proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Protocol $scheme;
  }

  location /jeunes-et-familles/obtenir-mon-code/ {
    proxy_pass  https://pass.sports.gouv.fr/obtenir-mon-code/;
    proxy_intercept_errors  on;
    proxy_set_header        Host                 pass.sports.gouv.fr;
    proxy_set_header        X-Real-IP            $remote_addr;
    proxy_set_header        X-Forwarded-For      $proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Protocol $scheme;
  }
}